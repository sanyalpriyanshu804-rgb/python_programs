n=int(input('Enter a number: '))
if n==2:
    print(n,'is a prime number.')
elif n<=0:
    print(n,'''is not a prime number.
prime numbers can\'t be 0 or negative.''')
else:
    for i in range (2,n):
        if n%i==0:
            print(n,'is not a prime number.')
            break
    if i==n-1:
        print(n,'is a prime number.')
